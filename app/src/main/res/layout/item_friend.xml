<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginVertical="1dp"
    app:cardBackgroundColor="#D0FFFFFF"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivUserImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            android:src="@drawable/avatar1" />

        <TextView
            android:id="@+id/ivName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/ivUserImg"
            android:lines="1"
            android:textColor="@color/teal_200"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Nadim GOUIA" />

        <TextView
            android:id="@+id/ivTweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/ivUserImg"
            android:lines="1"
            android:textSize="14sp"
            tools:text="Salut" />

        <TextView
            android:id="@+id/ivHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:lines="1"
            android:textSize="12sp"
            tools:text="12:00" />

        <View
            android:id="@+id/pointnoir"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_below="@id/ivHour"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/black_circle"
            android:visibility="invisible" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
